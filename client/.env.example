# Vite Environment Variables (Client-side)
# All variables must start with VITE_ to be accessible in the browser

# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url_here
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api
VITE_API_TIMEOUT=30000

# App Configuration
VITE_APP_NAME=FarmWise
VITE_APP_VERSION=1.0.0
VITE_APP_ENVIRONMENT=development

# Feature Flags
VITE_ENABLE_VOICE_ASSISTANT=true
VITE_ENABLE_CHATBOT=true
VITE_ENABLE_WEATHER=true
VITE_ENABLE_NOTIFICATIONS=true

# Language Configuration
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,hi

# Speech Configuration
VITE_SPEECH_RECOGNITION_LANG_EN=en-US
VITE_SPEECH_RECOGNITION_LANG_HI=hi-IN
VITE_SPEECH_SYNTHESIS_RATE=0.9
VITE_SPEECH_SYNTHESIS_VOLUME=0.8

# Chat Configuration
VITE_MAX_MESSAGE_LENGTH=1000
VITE_CHAT_HISTORY_LIMIT=100
VITE_TYPING_DELAY=50

# UI Configuration
VITE_THEME_PRIMARY_COLOR=emerald
VITE_ANIMATION_DURATION=300
VITE_MOBILE_BREAKPOINT=768

# Debug Configuration (only in development)
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# Analytics (if using)
VITE_ANALYTICS_ID=
VITE_GTM_ID=

# Social Media Links
VITE_FACEBOOK_URL=
VITE_TWITTER_URL=
VITE_INSTAGRAM_URL=

# Contact Information
VITE_SUPPORT_EMAIL=support@farmwise.com
VITE_SUPPORT_PHONE=+91-1234567890

# Location Services
VITE_DEFAULT_LOCATION=Delhi
VITE_ENABLE_GEOLOCATION=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/jpg,image/png,image/webp
