# Server Configuration
PORT=5000
NODE_ENV=development
CLIENT_URL=http://localhost:5173
SERVER_HOST=localhost

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/farming-assistant
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster0.xxxxx.mongodb.net/farming-assistant
MONGODB_OPTIONS_MAX_POOL_SIZE=10
MONGODB_OPTIONS_SERVER_SELECTION_TIMEOUT_MS=5000

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_JWT_SECRET=your_supabase_jwt_secret_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500
OPENAI_TEMPERATURE=0.7
OPENAI_TIMEOUT=30000

# OpenWeatherMap API (Optional - for weather data)
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENWEATHER_BASE_URL=https://api.openweathermap.org/data/2.5
OPENWEATHER_TIMEOUT=5000

# Rate Limiting Configuration
GENERAL_RATE_LIMIT_WINDOW_MS=900000
GENERAL_RATE_LIMIT_MAX=100
CHAT_RATE_LIMIT_WINDOW_MS=60000
CHAT_RATE_LIMIT_MAX=10
API_RATE_LIMIT_WINDOW_MS=300000
API_RATE_LIMIT_MAX=50

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here
COOKIE_MAX_AGE=86400000

# Application Configuration
APP_NAME=Farming Assistant API
APP_VERSION=1.0.0
API_VERSION=v1
MAX_MESSAGE_LENGTH=1000
MAX_RESPONSE_LENGTH=2000
CHAT_HISTORY_LIMIT=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10M
LOG_MAX_FILES=5
ENABLE_REQUEST_LOGGING=true

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_or_app_password
EMAIL_FROM=noreply@farmwise.com

# Redis Configuration (for caching - optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# File Upload Configuration
UPLOAD_MAX_FILE_SIZE=5242880
UPLOAD_ALLOWED_TYPES=image/jpeg,image/jpg,image/png,image/webp
UPLOAD_DESTINATION=uploads/
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Analytics Configuration
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
ENABLE_ANALYTICS=false

# Monitoring Configuration
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
HEALTH_CHECK_INTERVAL=30000

# Background Jobs Configuration (if using job queues)
QUEUE_REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3

# Third-party APIs
GOOGLE_MAPS_API_KEY=
SOIL_API_KEY=
CROP_DISEASE_API_KEY=

# Development Configuration
DEBUG_MODE=false
ENABLE_CORS_DEBUG=false
ENABLE_DETAILED_ERRORS=true
MOCK_EXTERNAL_APIS=false

# Production Configuration
CLUSTER_MODE=false
WORKER_PROCESSES=0
KEEP_ALIVE_TIMEOUT=5000
HEADERS_TIMEOUT=6000

# SSL Configuration (for production)
SSL_CERT_PATH=
SSL_KEY_PATH=
FORCE_HTTPS=false

# Database Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=7
BACKUP_S3_BUCKET=

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Content Moderation
ENABLE_CONTENT_MODERATION=true
PERSPECTIVE_API_KEY=
PROFANITY_FILTER_LEVEL=medium

# Language Configuration
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,hi
TRANSLATION_API_KEY=
